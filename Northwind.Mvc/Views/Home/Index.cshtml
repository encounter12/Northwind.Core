@model IEnumerable<CustomerListViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().ContactName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().OrdersCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in @Model)
        {
            <tr>
                <td>@customer.ContactName</td>
                <td>@customer.OrdersCount</td>
                <td>@Html.ActionLink("Details", "CustomerDetails", new { id = customer.Id })</td>
            </tr>
        }
    </tbody>
</table>
